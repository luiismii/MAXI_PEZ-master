@model MAXI_PEZ.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Número de teléfono";
}

@using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{<center>
        <div class="container media">
            <div class="card mx-auto mt-5 col-md-6">
                <div class="card-header bg-dark-gradient"><h2>@ViewBag.Title.</h2></div>
                <div class="card-body ">
                    @Html.AntiForgeryToken()
                    <h4>Agregar un número de teléfono</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Number, new { @class = "col-md-6 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Enviar" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </center>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
